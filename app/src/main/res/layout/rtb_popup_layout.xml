<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/rtb_popup_uppercardsview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1sp">

        <ImageView
            android:id="@+id/rtb_popup_card1"
            android:layout_width="0sp"
            android:layout_height="@dimen/rtb_popup_topcards_height"
            android:layout_weight="@integer/one"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/rtb_popup_card2"
            android:layout_width="0sp"
            android:layout_height="@dimen/rtb_popup_topcards_height"
            android:layout_weight="@integer/one"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="2sp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/rtb_popup_card3"
            android:layout_width="0sp"
            android:layout_height="@dimen/rtb_popup_topcards_height"
            android:layout_weight="@integer/one"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="2sp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="0sp"
            android:layout_height="@dimen/rtb_popup_topcards_height"
            android:layout_weight="@integer/one"
            android:scaleType="fitXY" />
    </LinearLayout>

    <TextView
        android:id="@+id/rtb_popup_warning_ace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="@integer/two">

        <ImageView
            android:id="@+id/rtb_popup_maincard"
            android:layout_width="@dimen/ridethebus_middlecardview_width"
            android:layout_height="@dimen/ridethebus_middlecardview_height"
            android:layout_centerInParent="true"
            android:scaleType="center" />
    </RelativeLayout>

    <TextView
        android:id="@+id/rtb_popup_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_sp" />

    <TextView
        android:id="@+id/rtb_popup_takeadrinktext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_takeadrink"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_five_sp" />
</LinearLayout>