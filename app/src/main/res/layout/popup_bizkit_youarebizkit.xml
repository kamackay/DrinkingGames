<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_bizkit_youarebizkit_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/twenty_five_sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/popup_bizkit_diecontainer"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/popup_bizkit_leftdie"
                android:layout_width="@dimen/one_hundred_sp"
                android:layout_height="@dimen/one_hundred_sp"
                android:src="@drawable/die_1" />

            <View
                android:layout_width="@dimen/fifty_sp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/popup_bizkit_rightdie"
                android:layout_width="@dimen/one_hundred_sp"
                android:layout_height="@dimen/one_hundred_sp"
                android:src="@drawable/die_1" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/twenty_five_sp" />

    <TextView
        android:id="@+id/popup_bizkit_messagetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/twenty_sp"
        android:paddingStart="@dimen/twenty_sp"
        android:text="@string/bizkit_message_youarebizkit"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_five_sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/thirty_sp" />

    <LinearLayout
        android:id="@+id/popup_bizkit_youarebizkit_edittext_container"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sixty_sp"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:layout_width="@dimen/zero"
            android:layout_height="fill_parent"
            android:layout_weight="@integer/one" />

        <EditText
            android:id="@+id/popup_bizkit_youarebizkit_edittext"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/fourty_sp"
            android:layout_weight="8"
            android:background="@color/lightGray"
            android:inputType="textPersonName"
            android:paddingEnd="@dimen/twenty_five_sp"
            android:paddingStart="@dimen/twenty_five_sp"
            android:text="@string/text_bitch"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_sp" />

        <View
            android:layout_width="@dimen/zero"
            android:layout_height="fill_parent"
            android:layout_weight="@integer/one" />

    </LinearLayout>

    <TextView
        android:id="@+id/popup_bizkit_youarebizkit_popupbottomtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/twenty_five_sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_sp"
        android:visibility="gone" />
</LinearLayout>